{
  "name": "jadersis-backend",
  "version": "1.397.0",
  "description": "A template for a nodejs application, using typescript",
  "main": "dist/src/index.js",
  "author": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch ./src/app.ts",
    "build": "tsc",
    "start": "node ./dist/app.js",
    "lint": "eslint --fix --quiet src/**/*.ts",
    "format": "prettier --loglevel silent --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build . -f docker/Dockerfile.development -t jadersis-backend:latest",
    "docker:tag": "docker tag jadersis-backend:latest localhost:5001/jadersis-backend:latest",
    "docker:push": "docker push localhost:5001/jadersis-backend:latest",
    "k8s:deploy": "kubectl apply -f kubernetes/deployment.yaml",
    "k8s:service": "kubectl apply -f kubernetes/service.yaml",
    "k8s:logs": "kubectl logs -f -l app=jadersis-backend --tail 1000",
    "k8s:rollout": "kubectl rollout restart deployment jadersis-backend",
    "start:dev": "npm run docker:build && npm run docker:tag && npm run docker:push && npm run k8s:deploy && npm run k8s:rollout && npm run k8s:service && npm run k8s:logs",
    "create:migrations": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  }
}
